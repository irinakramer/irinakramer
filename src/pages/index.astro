    </section>

    <!-- portfolio -->
    <section>
        <div
            class="px-8 py-10 mx-auto text-center md:px-12 lg:px-24 text-neutral-500 bg-white"
        >
            <div class="text-center">
                <h2
                    class="text-5xl font-semibold text-neutral-900 mb-8 lg:mb-12"
                    id="portfolio"
                >
                    Portfolio
                </h2>
            </div>
            <div
                class="grid grid-cols-1 gap-4 mx-auto text-sm font-medium lg:gap-8 sm:grid-cols-2 lg:grid-cols-2 max-w-7xl"
            >
                {
                    projects.map((project) => (
                        <ProjectCard
                            name={project.name}
                            url={project.url}
                            image={project.image.src}
                            tech={project.tech}
                            description={project.description}
                        />
                    ))
                }
            </div>
        </div>
        <br /><br />
    </section>

