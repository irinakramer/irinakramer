---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import SkillsCard from "../components/SkillsCard.astro";
import projects from "../data/projects.js";
import skills from "../data/skills";
import { Image } from "astro:assets";
import profilePhoto from "../images/profilePhoto.jpg";
---

<Layout title="Irina Kramer - Frontend Engineer">
    <section>
        <!-- intro -->
        <div
            class="px-8 py-10 mx-auto text-center md:px-12 lg:px-24 text-gray-500"
        >
            <div class="mx-auto w-32 pb-2 sm:pb-6 sm:w-48">
                <Image
                    class="rounded-full"
                    src={profilePhoto}
                    alt="Irina Kramer profile photo"
                />
            </div>
            <p
                class="max-w-xl mx-auto font-serif text-xl text-gray-500"
            >
                <em>
                    Hello! I'm Irina Kramer, full stack developer with
                    a front-end focus. I specialize in developing
                    ecommerce websites that are beautiful, fast and
                    converting. I'm well versed in Magento / Adobe
                    Commerce, HTML/JavaScript/CSS, React, and more. I
                    enjoy helping brands stand out by finding creative
                    solutions and providing exceptional work. I'm
                    based in Petaluma, California.
                </em>
            </p>
            <div
                class="grid grid-cols-1 gap-4 mx-auto mt-24 lg:gap-8 sm:grid-cols-2 lg:grid-cols-3 max-w-7xl"
            >
                {
                    projects.map((project) => (
                        <ProjectCard
                            name={project.name}
                            url={project.url}
                            image={project.image.src}
                            tech={project.tech}
                        />
                    ))
                }
            </div>
        </div>
    </section>

    <!-- skills -->

    <section>
        <div class="px-8 py-24 mx-auto md:px-12 lg:px-32 max-w-7xl">
            <div class="text-center">
                <h2
                    class="text-4xl font-semibold tracking-tighter text-gray-900 mb-8"
                >
                    Technical Skills
                </h2>
            </div>
            <div
                class="flex flex-wrap justify-center text-sm font-medium text-center text-gray-500 gap-x-6 gap-y-12 lg:gap-x-8 lg:gap-y-16 text-balance"
            >
                {
                    skills.map((skill) => (
                        <SkillsCard
                            area={skill.area}
                            skills={skill.skills}
                            icon={skill.icon}
                        />
                    ))
                }
            </div>
        </div>
    </section>

    <!-- value proposition -->

    <section>
        <div class="px-8 py-24 mx-auto md:px-12 lg:px-32 max-w-7xl">
            <div
                class="grid grid-cols-2 text-sm font-medium text-center text-gray-500 gap-x-6 gap-y-12 lg:grid-cols-3 lg:gap-x-8 lg:gap-y-16 text-balance"
            >
                <div>
                    <div>
                        <span
                            class="flex items-center justify-center mx-auto bg-gray-100 rounded-full size-12"
                            ><svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="1.5"
                                stroke="currentColor"
                                aria-hidden="true"
                                class="text-gray-600 size-6"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M3 7.5L7.5 3m0 0L12 7.5M7.5 3v13.5m13.5 0L16.5 21m0 0L12 16.5m4.5 4.5V7.5"
                                ></path></svg
                            ></span
                        >
                    </div>
                    <div class="mt-6">
                        <h3 class="text-base text-gray-900">
                            Persistence
                        </h3>
                        <p class="mt-2">
                            spotless will remember all your changes to
                            every element so you can copy all changes
                            at once!
                        </p>
                    </div>
                </div>
                <div>
                    <div>
                        <span
                            class="flex items-center justify-center mx-auto bg-gray-100 rounded-full size-12"
                            ><svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="1.5"
                                stroke="currentColor"
                                aria-hidden="true"
                                class="text-gray-600 size-6"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M6.827 6.175A2.31 2.31 0 015.186 7.23c-.38.054-.757.112-1.134.175C2.999 7.58 2.25 8.507 2.25 9.574V18a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9.574c0-1.067-.75-1.994-1.802-2.169a47.865 47.865 0 00-1.134-.175 2.31 2.31 0 01-1.64-1.055l-.822-1.316a2.192 2.192 0 00-1.736-1.039 48.774 48.774 0 00-5.232 0 2.192 2.192 0 00-1.736 1.039l-.821 1.316z"
                                ></path>
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M16.5 12.75a4.5 4.5 0 11-9 0 4.5 4.5 0 019 0zM18.75 10.5h.008v.008h-.008V10.5z"
                                ></path></svg
                            ></span
                        >
                    </div>
                    <div class="mt-6">
                        <h3 class="text-base text-gray-900">
                            Screenshot tool
                        </h3>
                        <p class="mt-2">
                            Make screenshots of a particular part of
                            the screen to share quick and easy!
                        </p>
                    </div>
                </div>
                <div>
                    <div>
                        <span
                            class="flex items-center justify-center mx-auto bg-gray-100 rounded-full size-12"
                            ><svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="1.5"
                                stroke="currentColor"
                                aria-hidden="true"
                                class="text-gray-600 size-6"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M6.429 9.75L2.25 12l4.179 2.25m0-4.5l5.571 3 5.571-3m-11.142 0L2.25 7.5 12 2.25l9.75 5.25-4.179 2.25m0 0L21.75 12l-4.179 2.25m0 0l4.179 2.25L12 21.75 2.25 16.5l4.179-2.25m11.142 0l-5.571 3-5.571-3"
                                ></path></svg
                            ></span
                        >
                    </div>
                    <div class="mt-6">
                        <h3 class="text-base text-gray-900">
                            Breakpoint info
                        </h3>
                        <p class="mt-2">
                            Instantly know what Tailwind breakpoint
                            you're currently on.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- testimonials -->
    <section>
        <div class="px-8 py-12 mx-auto md:px-12 lg:px-32 max-w-7xl">
            <ul
                class="w-full border-t divide-y border-mercury-300 divide-mercury-300"
                role="list"
            >
                <li class="py-4 lg:py-8">
                    <div
                        class="grid items-start grid-cols-1 gap-6 lg:grid-cols-3 lg:gap-24"
                    >
                        <div class="lg:col-span-2 lg:order-last">
                            <p
                                class="text-sm font-medium text-gray-500 text-balance"
                            >
                                Snowflake is a cloud data platform
                                that enables data storage, processing,
                                and analytics solutions for
                                businesses. With the Data Cloud
                                platform, Snowflake manages the
                                complexities of data storage
                                infrastructure, enabling organizations
                                to focus on building data-driven
                                solutions.
                            </p>
                        </div>
                        <div class="inline-flex items-center gap-3">
                            <div class="flex-shrink-0">
                                <img
                                    alt=""
                                    class="object-cover w-10 h-10 rounded-full lg:h-16 lg:w-16"
                                    src="https://images.unsplash.com/flagged/photo-1570612861542-284f4c12e75f?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80"
                                />
                            </div>
                            <div class="flex-1 min-w-0">
                                <p
                                    class="text-lg font-medium leading-6 text-black"
                                >
                                    Volkan Kaya
                                </p>
                                <p class="text-sm text-gray-500">
                                    Founder of Versoly.com
                                </p>
                            </div>
                        </div>
                    </div>
                </li>
                <li class="py-4 lg:py-8">
                    <div
                        class="grid items-start grid-cols-1 gap-6 lg:grid-cols-3 lg:gap-24"
                    >
                        <div class="lg:col-span-2 lg:order-last">
                            <p
                                class="font-medium text-gray-500 text-s text-balancem"
                            >
                                Upswing securities passively index
                                inverse bondholders capitalization
                                financial health Moody's debt managed.
                                Receive bondholders called
                                capitalization investment grade bonds
                                bills management district stocks.
                                Potential funds consulting expenses.
                            </p>
                        </div>
                        <div class="inline-flex items-center gap-3">
                            <div class="flex-shrink-0">
                                <img
                                    alt=""
                                    class="object-cover w-10 h-10 rounded-full lg:h-16 lg:w-16"
                                    src="https://images.unsplash.com/photo-1577202214328-c04b77cefb5d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2073&q=80"
                                />
                            </div>
                            <div class="flex-1 min-w-0">
                                <p
                                    class="text-lg font-medium leading-6 text-black"
                                >
                                    Amrit Nagi
                                </p>
                                <p class="text-sm text-gray-500">
                                    Founder of Tailwind Toolbox
                                </p>
                            </div>
                        </div>
                    </div>
                </li>
                <li class="py-4 lg:py-8">
                    <div
                        class="grid items-start grid-cols-1 gap-6 lg:grid-cols-3 lg:gap-24"
                    >
                        <div class="lg:col-span-2 lg:order-last">
                            <p
                                class="font-medium text-gray-500 text-s text-balancem"
                            >
                                Debt bills lucrative capitalization
                                municipal bonds government 401k bear
                                bull credit corporate bonds called
                                NYSE finance. Managed prices
                                bondholders federal risk NASDAQ hedge
                                fund expenses municipal bonds
                                management.
                            </p>
                        </div>
                        <div class="inline-flex items-center gap-3">
                            <div class="flex-shrink-0">
                                <img
                                    alt=""
                                    class="object-cover w-10 h-10 rounded-full lg:h-16 lg:w-16"
                                    src="https://images.unsplash.com/photo-1624224971170-2f84fed5eb5e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1999&q=80"
                                />
                            </div>
                            <div class="flex-1 min-w-0">
                                <p
                                    class="text-lg font-medium leading-6 text-black"
                                >
                                    Mike jones
                                </p>
                                <p class="text-sm text-gray-500">
                                    Blogger at Raspada
                                </p>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </section>
</Layout>
