<Layout title="Irina Kramer - eCommerce web developer and designer">
    <!-- Hero -->
    <section>
        <div class="relative isolate px-6 py-14 lg:px-8 bg-white">
            <div class="mx-auto max-w-2xl py-18">
                <div class="mx-auto w-32 pb-2 sm:pb-6">
                    <Image
                        class="rounded-2xl border-neutral-200 shadow-xl"
                        src={profilePhoto}
                        alt="Irina Kramer profile photo"
                    />
                </div>

                <div class="hidden sm:mb-8 sm:flex sm:justify-center">
                    <div
                        class="relative rounded-full px-3 py-1 text-sm/6 text-gray-600 ring-1 ring-gray-900/10 hover:ring-gray-900/20"
                    >
                        Hi, I'm Irina Kramer
                    </div>
                </div>
                <div class="text-center">
                    <h1
                        class="text-5xl font-semibold tracking-tight text-balance text-gray-900 sm:text-7xl"
                    >
                        I help artists and creators sell beautifully
                        online
                    </h1>
                    <p
                        class="mt-8 text-lg text-pretty text-gray-500 sm:text-xl/8"
                    >
                        I'm a web developer and designer specializing
                        in creating eCommerce websites for artists,
                        makers and creative brands. With strong coding
                        skills and expertise in Shopify and
                        WooCommerce, I can help you sell your products
                        online and grow your business.
                    </p>
                    <div
                        class="mt-10 flex items-center justify-center gap-x-6"
                    >
                        <ContactButton text="Let's Connect" />
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- testimonials grid -->
    <section>
        <div class="bg-gray-50 py-24">
            <div class="mx-auto max-w-2xl px-6 lg:max-w-7xl lg:px-8">
                <h2
                    class="text-center text-base/7 font-semibold text-indigo-600"
                >
                    Testimonials
                </h2>
                <p
                    class="mx-auto mt-2 max-w-lg text-center text-4xl font-semibold tracking-tight text-balance text-gray-950 sm:text-5xl"
                >
                    What my clients and colleagues are saying
