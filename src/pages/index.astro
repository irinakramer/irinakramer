---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import SkillsCard from "../components/SkillsCard.astro";
import ServicesCard from "../components/ServicesCard.astro";
import projects from "../data/projects.js";
import skills from "../data/skills";
import services from "../data/services";
import testimonials from "../data/testimonials";
import TestimonialCard from "../components/TestimonialCard.astro";
import { Image } from "astro:assets";
import profilePhoto from "../images/profilePhoto.jpg";
---

<Layout title="Irina Kramer - Frontend Engineer">
    <section>
        <!-- intro -->
        <div
            class="px-8 py-10 mx-auto text-center md:px-12 lg:px-24 text-gray-500"
        >
            <div class="mx-auto w-32 pb-2 sm:pb-6 sm:w-48">
                <Image
                    class="rounded-full"
                    src={profilePhoto}
                    alt="Irina Kramer profile photo"
                />
            </div>
            <p
                class="max-w-xl mx-auto font-serif text-xl text-gray-500"
            >
                <em>
                    Hello! I'm Irina Kramer, full stack developer with
                    a front-end focus. I specialize in developing
                    ecommerce websites that are beautiful, fast and
                    converting. I'm well versed in Magento / Adobe
                    Commerce, HTML/JavaScript/CSS, React, and more. I
                    enjoy helping brands stand out by finding creative
                    solutions and providing exceptional work. I'm
                    based in Petaluma, California.
                </em>
            </p>
            <div
                class="grid grid-cols-1 gap-4 mx-auto mt-24 lg:gap-8 sm:grid-cols-2 lg:grid-cols-3 max-w-7xl"
            >
                {
                    projects.map((project) => (
                        <ProjectCard
                            name={project.name}
                            url={project.url}
                            image={project.image.src}
                            tech={project.tech}
                        />
                    ))
                }
            </div>
        </div>
    </section>

    <!-- skills -->
    <section>
        <div class="px-8 py-24 mx-auto md:px-12 lg:px-32 max-w-7xl">
            <div class="text-center">
                <h2
                    class="text-4xl font-semibold tracking-tighter text-gray-900 mb-8"
                >
                    My Tech Stack
                </h2>
            </div>
            <div
                class="grid grid-cols-2 text-sm font-medium text-gray-500 gap-x-6 gap-y-12 lg:grid-cols-4 lg:gap-x-8 lg:gap-y-16 text-balance"
            >
                {
                    skills.map((skill) => (
                        <SkillsCard
                            name={skill.name}
                            description={skill.description}
                            logo={skill.logo}
                        />
                    ))
                }
            </div>
        </div>
    </section>

    <!-- services -->
    <section>
        <div class="px-8 py-24 mx-auto md:px-12 lg:px-32 max-w-7xl">
            <div class="text-center">
                <h2
                    class="text-4xl font-semibold tracking-tighter text-gray-900 mb-8"
                >
                    Services
                </h2>
            </div>
            <div
                class="flex flex-wrap justify-center text-sm font-medium text-center text-gray-500 gap-x-6 gap-y-12 lg:gap-x-8 lg:gap-y-16 text-balance"
            >
                {
                    services.map((service) => (
                        <ServicesCard
                            name={service.name}
                            description={service.description}
                            icon={service.icon}
                        />
                    ))
                }
            </div>
        </div>
    </section>

    <!-- testimonials -->
    <section>
        <div class="px-8 py-12 mx-auto md:px-12 lg:px-32 max-w-7xl">
            <div class="text-center">
                <h2
                    class="text-4xl font-semibold tracking-tighter text-gray-900 mb-8"
                >
                    What my colleagues and clients are saying
                </h2>
            </div>
            <ul
                role="list"
                class="grid max-w-2xl grid-cols-1 gap-6 mx-auto sm:gap-4 lg:max-w-none lg:grid-cols-3"
            >
                {
                    testimonials.map((testimonial) => (
                        <TestimonialCard
                            author={testimonial.author}
                            title={testimonial.title}
                            text={testimonial.text}
                            avatar={testimonial.avatar}
                            link={testimonial.link}
                        />
                    ))
                }
            </ul>
        </div>
    </section>

    <!-- hire me -->
    <section>
        <div class="px-8 py-12 mx-auto md:px-12 lg:px-32 max-w-7xl">
            <div class="p-2 border bg-gray-50 rounded-3xl">
                <div
                    class="p-10 text-center bg-white border shadow-lg md:p-20 rounded-3xl"
                >
                    <p
                        class="mt-8 text-4xl font-semibold tracking-tighter text-black"
                    >
                        Hire me
                    </p>
                    <p
                        class="w-1/2 mx-auto mt-4 text-base text-gray-500 text-balance"
                    >
                        Are you prepared to talk about your project?
                        Send me an email outlining the details, and
                        I'll respond promptly with a quote or
                        proposal. Thank you!
                    </p>
                    <div
                        class="flex flex-col items-center justify-center gap-2 mx-auto mt-8 md:flex-row"
                    >
                        <a
                            class="inline-flex items-center justify-center w-full h-12 gap-3 px-5 py-3 bg-gray-100 md:w-auto rounded-xl hover:bg-gray-200 focus:outline-none"
                            href="mailto:irinakramer.pro@gmail.com?subject=Inquiry from website"
