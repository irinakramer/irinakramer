---
const { name, description, logo } = Astro.props;
---

<div>
    <div class="flex flex-col gap-2 lg:flex-row">
        <div>
            <span class="flex items-center justify-center size-6"
                ><Fragment set:html={logo} />
            </span>
        </div>
        <div>
            <h3 class="text-base text-gray-900">
                {name}
            </h3>
        </div>
    </div>
    <p class="mt-2">
        {description}
    </p>
</div>
