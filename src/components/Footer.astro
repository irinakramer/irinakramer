---
import Spiral from "./icons/Spiral.astro";
const currentYear = new Date().getFullYear();
---

<footer>
    <div class="px-8 py-12 mx-auto md:px-12 lg:px-32 max-w-7xl">
        <div class="flex flex-col items-baseline space-y-6">
            <div class="mx-auto">
                <a href="/" class="mx-auto text-lg text-center">
                    <Spiral />
                </a>
            </div>
            <div
                class="mx-auto"
                x-data="{ year: new Date().getFullYear() }"
            >
                <span
                    class="mx-auto mt-2 text-sm font-medium text-gray-500"
                >
                    Copyright Â© <span x-text="year"
                        >{currentYear}</span
                    >
                    <a
                        aria-label="irina kramer"
                        href="#_"
                        class="mx-2 text-blue-500 hover:text-gray-500"
                        >Irina Kramer</a
                    >
                </span>
            </div>
        </div>
    </div>
</footer>
