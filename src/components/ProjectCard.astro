---
const { name, url, tech, image } = Astro.props;
---

<a href={url} class="overflow-hidden rounded-md bg-gray-100"
    ><div class="p-4 lg:px-12 lg:py-24">
        <img
            class="duration-500 rounded-lg shadow hover:shadow-3xl hover:-translate-y-4"
            src={image}
            alt={name}
        />
        <h3 class="mt-8 text-base text-gray-900">
            {name}
        </h3>
        <p class="mt-2 text-sm text-gray-500">
            {tech}
        </p>
    </div></a
>

