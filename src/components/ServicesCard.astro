---
const { name, description, icon } = Astro.props;
---

<div class="basis-full md:basis-1/3 lg:basis-1/4">
    <div>
        <span
            class="flex items-center justify-center mx-auto bg-gray-100 border rounded-full size-14"
            ><img src={icon.src} class="size-8" /></span
        >
    </div>
    <div class="mt-6">
        <h3 class="text-base text-gray-900">
            {name}
        </h3>
        <p class="mt-2">
            {description}
        </p>
    </div>
</div>
